<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_item_main">

    <fragment
        android:id="@+id/nav_item_main"
        android:name="kz.weatherastana.app.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_item_main_to_fragment_home_details"
            app:destination="@id/fragment_home_details" />

    </fragment>

    <fragment
        android:id="@+id/fragment_home_details"
        android:name="kz.weatherastana.app.ui.home.details.HomeDetailsFragment"
        android:label="@string/overview"
        tools:layout="@layout/fragment_home_details">

        <argument
            android:name="dayModel"
            android:defaultValue="@null"
            app:argType="kz.weatherastana.app.domain.model.DayModel"
            app:nullable="true" />

    </fragment>

</navigation>